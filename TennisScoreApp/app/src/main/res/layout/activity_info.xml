<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_pb"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.InfoActivity">

    <LinearLayout
        android:id="@+id/ll_social"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@color/white_bg"
        android:weightSum="4">


        <ImageView
            android:id="@+id/iv_vk_share"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/ic_vk" />

        <ImageView
            android:id="@+id/iv_google_share"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/ic_google" />

        <ImageView
            android:id="@+id/iv_twitter_share"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/ic_twitter" />

        <ImageView
            android:id="@+id/iv_facebook_share"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/ic_facebook" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/info_logo" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="Tennis Score v.1.0"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:text="@string/_2016_becool"
        android:textSize="15sp" />


    <Button
        android:id="@+id/btn_rate"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@drawable/dialogs_btn"
        android:gravity="center"
        android:text="@string/leave_a_review"
        android:textAllCaps="false"
        android:textColor="@color/color_pb"
        android:textSize="15sp"
        android:textStyle="" />

    <Button
        android:id="@+id/btn_report_bug"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_below="@+id/btn_rate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@drawable/dialogs_btn"
        android:gravity="center"
        android:text="@string/report_bug"
        android:textAllCaps="false"
        android:textColor="@color/color_pb"
        android:textSize="15sp"
        android:textStyle="" />

</RelativeLayout>
